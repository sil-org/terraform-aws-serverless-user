{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "apigateway:GET"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "apigateway:GET",
        "apigateway:POST",
        "apigateway:PUT",
        "apigateway:PATCH",
        "apigateway:DELETE"
      ],
      "Resource": [
        "arn:aws:apigateway:${aws_region}::/restapis",
        "arn:aws:apigateway:${aws_region}::/restapis/*",
        "arn:aws:apigateway:${aws_region}::/usageplans",
        "arn:aws:apigateway:${aws_region}::/usageplans/*",
        "arn:aws:apigateway:${aws_region}::/apikeys",
        "arn:aws:apigateway:${aws_region}::/apikeys/*",
        "arn:aws:apigateway:${aws_region}::/domainnames",
        "arn:aws:apigateway:${aws_region}::/domainnames/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "acm:ListCertificates"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "cloudfront:UpdateDistribution"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}